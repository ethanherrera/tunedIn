# =====================================================
# EXAMPLE ENVIRONMENT CONFIGURATION FOR LOCAL DEVELOPMENT
# =====================================================

# Server configuration
API_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# Spotify API Configuration
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/spotify/callback

# Frontend URL for redirecting after authentication
FRONTEND_URL=http://localhost:5137
FRONTEND_PORT=5137

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=tunedIn
MONGODB_USERNAME=root
MONGODB_PASSWORD=your-mongodb-password
MONGODB_AUTH_DATABASE=admin

# Logging configuration
MONGODB_LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
SPRING_LOG_LEVEL=INFO

# Error handling
SERVER_ERROR_INCLUDE_MESSAGE=always
SERVER_ERROR_INCLUDE_BINDING_ERRORS=always
SERVER_ERROR_INCLUDE_STACKTRACE=never 